{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "lib": [
            "es2015",
            "dom",
            "es2016"
        ],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "k6",
            "jest"
        ]
    },
    "include": [
        "tests/**/*",
        "shared/**/*"
    ]
}